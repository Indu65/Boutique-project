                "Women",
                "Men",
                "Kids",
                "Seniors"
            ],
            "required": true
        },
        "description": {
            "type": "text"
        },
        "stock": {
            "type": "integer",
            "default": 0,
            "required": true
        },
        "sizes": {
            "type": "json"
        },
        "imageUrl": {
            "type": "string"
        },
        "tags": {
            "type": "string"
        },
        "sellerId": {
            "type": "string"
        },
        "sellerName": {
            "type": "string"
        }
    }
}